{
	"name": "artist-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "yarn swc ./src -s -d ./dist",
		"build:container": "docker compose -f dev.compose.yml build",
		"start": "nest start",
		"start:dev": "yarn openapi-generate && nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"start:container": "docker compose -f dev.compose.yml up",
		"migrate:container": "docker compose -f dev.compose.yml exec app bash -c 'source /root/.asdf/asdf.sh && cd /app && yarn prisma migrate dev'",
		"seed:container": "docker compose -f dev.compose.yml exec app bash -c 'source /root/.asdf/asdf.sh && cd /app && yarn prisma db seed'",
		"prisma-studio:container": "docker compose -f dev.compose.yml exec app bash -c 'source /root/.asdf/asdf.sh && cd /app && yarn prisma studio'",
		"lint": "eslint --ext .js,.ts,.tsx \"./src/**/*.{js,ts,tsx}\"",
		"lint:fix": "yarn lint --fix",
		"fmt": "prettier --config ./.prettierrc  --list-different \"src/**/*.{js,json,ts,tsx,css,md}\"",
		"fmt:fix": "yarn fmt --write",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"submodule-update": "cd $(git rev-parse --show-superproject-working-tree --show-toplevel | head -1)/schema && git fetch && git checkout origin/main",
		"setup-githooks": "git config core.hooksPath $(git rev-parse --show-superproject-working-tree --show-toplevel | head -1)/.githooks",
		"postinstall": "yarn setup-githooks && yarn prisma generate && yarn openapi-generate",
		"localstack-list-buckets": "aws s3 ls --endpoint-url=http://localstack:4566 --profile localstack",
		"ci:local": "yarn tsc --noEmit && yarn lint && yarn test && yarn build && yarn prisma generate",
		"openapi-generate": "openapi-typescript ./schema/openapi/openapi.json --output src/generated/schema.ts --immutable-types -t"
	},
	"engines": {
		"npm": "use yarn instead.",
		"yarn": ">= 1.22.19"
	},
	"dependencies": {
		"@kripod/uuidv7": "^0.3.4",
		"@nestjs/common": "^10.0.5",
		"@nestjs/core": "^10.0.5",
		"@nestjs/platform-express": "^10.0.5",
		"@prisma/client": "^4.16.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@mermaid-js/mermaid-cli": "^10.2.4",
		"@nestjs/cli": "^10.1.7",
		"@nestjs/schematics": "^10.0.1",
		"@nestjs/testing": "^10.0.5",
		"@prisma/generator-helper": "^4.16.2",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.68",
		"@swc/jest": "^0.2.26",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "29.5.2",
		"@types/node": "18.16.19",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"bcrypt": "^5.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "29.6.1",
		"openapi-typescript": "^6.3.2",
		"prettier": "^3.0.0",
		"prisma": "^4.16.2",
		"prisma-erd-generator": "^1.6.2",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "29.1.1",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "4.2.0",
		"typescript": "^5.1.6"
	},
	"prisma": {
		"seed": "ts-node prisma/seed/start.ts"
	}
}
